{
  "name": "schema-script",
  "version": "0.1.2",
  "description": "Preprocessor integrating JSON Schema with TypeScript",
  "main": "index.js",
  "bin": {
    "schema-script": "dist/cli.js",
    "ss": "dist/cli.js"
  },
  "scripts": {
    "test": "jest",
    "prepublishOnly": "npm run lint && npm run depcheck && npm run compile",
    "compile": "npm run clean && tsc -p .",
    "watch": "tsc -w -p .",
    "clean": "rm -rf dist",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "depcheck": "depcheck --ignores='ts-jest,@types/*,prettier,husky,json-schema'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orkon/schema-script.git"
  },
  "keywords": [
    "typescript",
    "schema",
    "json",
    "generator"
  ],
  "author": "Oleksii Rudenko <alexei.rudenko@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/orkon/schema-script/issues"
  },
  "homepage": "https://github.com/orkon/schema-script#readme",
  "devDependencies": {
    "@types/glob": "7.1.1",
    "@types/jest": "23.3.10",
    "@types/json-schema": "7.0.1",
    "@types/prettier": "1.15.2",
    "@types/toposort": "2.0.1",
    "depcheck": "0.6.11",
    "husky": "1.2.0",
    "io-ts": "1.4.2",
    "jest": "23.6.0",
    "ts-jest": "23.10.5",
    "tslint": "5.11.0",
    "typescript": "3.2.2"
  },
  "dependencies": {
    "glob": "7.1.3",
    "io-ts-codegen": "0.2.1",
    "json-schema": "0.2.3",
    "prettier": "1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "files": [
    "dist/app.js",
    "dist/cli.js",
    "dist/lib/**/*.js"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/src/test/.*\\.test.(ts|js)$"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
